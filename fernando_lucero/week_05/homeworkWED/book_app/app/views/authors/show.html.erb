<h1><%= @author.name %></h1>
	<div class="myList">
		<ul>
		  <li><%= @author.nationality %></li>
		  <li><%= @author.dob.strftime '%A %e %B, %Y' %></li>
		  <li><%= link_to 'Edit', edit_author_path(@author) %></li>
		  <li><%= link_to 'Delete',  @author, :method => 'delete' %></li>
		</ul>
	</div>

	<%= image_tag(@author.image, :class => 'thumb') %>

<h3>Books</h3>
<% @author.books.each do |book| %>
  <%= link_to(image_tag(book.image, :class => 'thumb', :title => book.title), book) %>
<% end %>