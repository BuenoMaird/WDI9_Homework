<!DOCTYPE html>
<html>
<head>
  <title>BookApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<header>
		<h1 class="bigHeading">The Book Store</h1>
		<nav>
			<ul>
				<li><%= link_to('Books', books_path)%></li>
				<li><%= link_to('Authors', authors_path)%></li>
				<li><%= link_to('New Author', new_author_path)%></li>
				<li><%= link_to('New Book', new_book_path)%></li>
			</ul>
		</nav>
	</header>	


<%= yield %>

</div><!-- container -->

</body>
</html>
